<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="10" >

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="#8258FA" >

        <RelativeLayout
            android:id="@+id/rlOrderPreviewListView"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_background_transparent"
            android:padding="4dip" >

            <com.example.stewardimperial.custom.CustomImageView
                android:id="@+id/ivOrderPreviewListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/foofys" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvOrderPreviewListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rlOrderPreviewListView"
            android:layout_toRightOf="@+id/rlOrderPreviewListView"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="#FF0080"
        android:orientation="horizontal"
        android:weightSum="3" >

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvOrderPreviewListQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2" >

            <Button
                android:id="@+id/btOrderPreviewListQuantIncrease"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:text="up" />

            <Button
                android:id="@+id/btOrderPreviewListQuantDecrease"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:text="down" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="#00FFBF"
        android:orientation="vertical"
        android:weightSum="4" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:padding="2dip" >

            <CheckBox
                android:id="@+id/cbOrderPreviewListCommentOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="CheckBox" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:padding="2dip" >

            <CheckBox
                android:id="@+id/cbOrderPreviewListCommentTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="CheckBox" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:padding="2dip" >

            <CheckBox
                android:id="@+id/cbOrderPreviewListCommentThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="CheckBox" />
        </RelativeLayout>

        <EditText
            android:id="@+id/etOrderPreviewList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="10dip"
        android:background="#80FF00" >

        <Button
            android:id="@+id/btOrderPreviewViewDelete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Delete"
            android:layout_gravity="center" />

    </LinearLayout>

</LinearLayout>